{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "analyze": "ANALYZE=1 umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:ci": "umi-test --coverage --ci"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@umijs/plugin-antd": "^0.15.2",
    "@umijs/renderer-react": "^4.0.30",
    "ahooks": "^3.7.5",
    "antd": "^5.10.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^5.2.0",
    "umi": "^3.5.36",
    "react": "17.x",
    "react-dom": "17.x"
  },
  "devDependencies": {
    "react-test-renderer": "^17.0.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^17.0.11",
    "@umijs/test": "^3.5.20",
    "lint-staged": "^12.3.5",
    "prettier": "^2.8.3",
    "typescript": "^5.0.2",
    "yorkie": "^2.0.0"
  }
}
